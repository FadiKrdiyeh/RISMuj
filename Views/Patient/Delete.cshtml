@model RIS.Models.Patient

@{
    ViewBag.Title = @RIS.Resources.Res.deletePat.ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>@RIS.Resources.Res.deletePat.ToString()</title>
<div style="margin-top:1%">

    <h2>@RIS.Resources.Res.deletePat.ToString()</h2>



    @*<h4>Patient</h4>*@
    <center>
        <h3>@RIS.Resources.Res.sureDeletePat.ToString()</h3>
        <div style="margin-top:3px;background-color:white;width:700px; height:350px;border-radius:4px;">



            @Html.HiddenFor(model => model.num)
            @Html.HiddenFor(model => model.givenid)
            @Html.HiddenFor(model => model.id)

            <table style="width:100%; height:100%; text-align:center;" align="center">
                <tr>
                    <td colspan="3">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "background-color: yellow;display: table - footer - group;list-style-type: none; " })


                    </td>
                </tr>
                <tr style="background-color:wheat;">

                    <td>@Html.LabelFor(model => model.firstname, htmlAttributes: new { })</td>
                    <td>@Html.LabelFor(model => model.middlename, htmlAttributes: new { })</td>
                    <td>@Html.LabelFor(model => model.lastname, htmlAttributes: new { })</td>

                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.firstname)</td>
                    <td>@Html.DisplayFor(model => model.middlename)</td>
                    <td>@Html.DisplayFor(model => model.lastname)</td>

                </tr>
                <tr style="background-color:wheat;">
                    <td>@Html.LabelFor(model => model.mothername, htmlAttributes: new { })</td>
                    <td>@Html.LabelFor(model => model.gendre, htmlAttributes: new { })</td>
                    <td></td>

                </tr>

                <tr>
                    <td>@Html.DisplayFor(model => model.mothername)</td>
                    <td>

                        @{
                        int g = Int16.Parse(Html.ValueFor(model => model.gendre).ToString());
                        //  string selected = "selected";
                        if (g == 1)
                        {
                    @RIS.Resources.Res.male
                        }
                        else
                        {
                    @RIS.Resources.Res.female
                        }
                        }

                    </td>
                    <td></td>


                </tr>

                <tr style="background-color:wheat;">

                    <td>@Html.LabelFor(model => model.birthdate, htmlAttributes: new {})</td>
                    <td>@Html.LabelFor(model => model.age, htmlAttributes: new {})</td>
                    <td></td>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.birthdate)</td>
                    <td>@Html.DisplayFor(model => model.age)</td>
                    <td></td>
                </tr>
                <tr style="background-color:wheat;">
                    <td>@Html.LabelFor(model => model.nationalidnumber, htmlAttributes: new {  })</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.nationalidnumber)</td>
                    <td></td>
                    <td></td>
                </tr>
                
            </table>



        </div>
    </center>
