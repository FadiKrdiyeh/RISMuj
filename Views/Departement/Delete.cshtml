@model RIS.Models.Departement

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@RIS.Resources.Res.DepartmentDelete</title>
<div style="margin-top:1%">
    <h2>@RIS.Resources.Res.DepartmentDelete</h2>

    @*<h3>Are you sure you want to delete this?</h3>*@

    <center>
        <h3>@RIS.Resources.Res.surDelDep.ToString()</h3>
        <div style="margin-top:3px;background-color:white;width:600px;border-radius:4px;">
            <table>
                <tr>
                    <td>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "background-color: yellow;display: table - footer - group;list-style-type: none; " })
                    </td>
                </tr>
            </table>
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>

            </dl>

        </div>

    </center>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <table align="center">
            <tr>
                <td><input type="submit" value=@RIS.Resources.Res.Delete class="btn btn-default" /></td>
                <td>@Html.ActionLink(RIS.Resources.Res.backToDepList, "Index")</td>

            </tr>

        </table>
    }
</div>
