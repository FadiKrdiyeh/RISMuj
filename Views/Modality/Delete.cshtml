            </dl>




        </div>
    </center>
    <table align="center">
        <tr>

            @using (Html.BeginForm())

            {
        @Html.AntiForgeryToken()


        <td> <input type="submit" value=@RIS.Resources.Res.Delete.ToString() class="btn btn-default" /></td>

        <td> @Html.ActionLink(RIS.Resources.Res.BackToModalityList.ToString(), "Index")</td>
        }




        </tr>

    </table>

