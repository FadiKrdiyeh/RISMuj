                @Html.EditorFor(model => model.APPROVEDDOCTORID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.APPROVEDDOCTORID, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
