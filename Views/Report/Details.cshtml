                                @{
                                    try
                                    {
                                        if (Model.PATIENT.birthdate != null)
                                        {
                                            <div>@Model.PATIENT.birthdate.Value.ToShortDateString()</div>
                                        }
                                    }
                                    catch
                                    {
                                        <div></div>
                                    }
                                }
                            </td>
                        </tr>
                    </table>
                    <table style="background:white;">
                        <tr class="no-boeder">
