                                @{
                                    try
                                    {
                                        if (!string.IsNullOrEmpty(Model.RADIOLOGY.Doctor))
                                        {
                                            <div>@Model.RADIOLOGY.Doctor</div>
                                        }
                                    }
                                    catch
                                    {
                                        <div></div>
                                    }
                                }
                            </td>
