                                    {
                                        if (!string.IsNullOrEmpty(Model.REFERINGPHYSICIAN.name))
                                        {
                                            <div>@Model.REFERINGPHYSICIAN.name</div>
                                        }
                                        else
                                        {
                                            <div>غير معروف</div>
                                        }
                                    }
                                    catch
                                    {
                                        <div>غير معروف</div>
                                    }
                                }
                            </td>

