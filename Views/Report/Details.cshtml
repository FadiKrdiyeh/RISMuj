                          @RIS.Resources.Res.mnm_tit:
                    </td>
                    @*</tr>
                        <tr>*@
                    <td style="text-align:center;background:white;color:black">

                        @Html.TextAreaFor(model => model.TITLE, new { @id= "reportTitle", @class = "form-control", @style = "width:100%;color: black !important;", @readonly ="true" })
                    </td>
                </tr>
            </table>
        </center>

