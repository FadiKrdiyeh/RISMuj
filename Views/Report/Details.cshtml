                                @{
                                    try
                                    {
                                        if (Model.RADIOLOGY.EndDate != null)
                                        {
                                            <div>@Model.RADIOLOGY.EndDate</div>
                                        }
                                    }
                                    catch
                                    {
                                        <div></div>
                                    }
                                }
                            </td>

