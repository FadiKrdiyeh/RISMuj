@model RIS.Models.Doctor

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@RIS.Resources.Res.deleteDoctor.ToString()</title>

<div style="margin-top:1%">
    <h2>@ViewData["PageName"]</h2>


    <center>
        <h3>@RIS.Resources.Res.surDelDoctor.ToString()</h3>
        <div style="margin-top:3px;background-color:white;width:600px; height:300px;border-radius:4px;">
    <center>

    <table>
        <tr>
            <td class="col-md-8">
                @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "background-color: yellow;display: table - footer - group;list-style-type: none; " })
            </td>
        </tr>
    </table>
    @Html.HiddenFor(model => model.num)
    <table class="table">
        <thead style="background-color:wheat">
            <tr>
                <th style="text-align:center">@Html.DisplayNameFor(model => model.name)</th>
                <th style="text-align:center">@Html.DisplayNameFor(model => model.department)</th>
            </tr>
        </thead>
        <tr>
            <td>@Html.DisplayFor(model => model.name)</td>
            <td>@Html.DisplayFor(model => model.docDepartmentName)</td>
        </tr>
    </table>

    <table class="table">
        <thead style="background-color:wheat">
            <tr>
                <th style="text-align:center">@Html.DisplayNameFor(model => model.description)</th>
            </tr>
        </thead>
        <tr>
            <td>@Html.DisplayFor(model => model.description)</td>
        </tr>
    </table>

    <table class="table">
        <thead style="background-color:wheat">
            <tr>
                <th style="text-align:center">@Html.DisplayNameFor(model => model.insertDate)</th>
                <th style="text-align:center">@Html.DisplayNameFor(model => model.insertUser)</th>
            </tr>
        </thead>
        <tr>
            <td>@Html.DisplayFor(model => model.insertDate)</td>
            <td>@Html.DisplayFor(model => model.insertUserName)</td>
        </tr>
    </table>
    </center>

    </div>
    </center>
    <table align="center">
        <tr>

            @using (Html.BeginForm())

            {
                @Html.AntiForgeryToken()


                <td> <input type="submit" value=@RIS.Resources.Res.Delete.ToString() class="btn btn-default" /></td>

                <td> @Html.ActionLink(RIS.Resources.Res.BackToDoctorsList.ToString(), "Index")</td>
            }




        </tr>

    </table>

</div>
