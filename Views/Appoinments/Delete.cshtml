@model RIS.Models.Appoinments

@{
    ViewBag.Title = @RIS.Resources.Res.appDetails.ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@RIS.Resources.Res.sureDeleteApp.ToString()</title>
<div style="margin-top:1%">

    <h2>@RIS.Resources.Res.sureDeleteApp.ToString()</h2>


    <center>
        <table style="margin-top:3px; border:double; background-color:white; ">
            <tr>
                <td colspan="3">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "background-color: yellow;display: table - footer - group;list-style-type: none; " })
                </td>
            </tr>
            <tr style="background-color:wheat;">
                <td>@Html.LabelFor(model => model.appID, htmlAttributes: new { @class = "" })</td>
                <td>@Html.LabelFor(model => model.accNum, htmlAttributes: new { @class = "" })</td>
                <td>@Html.LabelFor(model => model.appDate, htmlAttributes: new { @class = "" })</td>
            </tr>

            <tr>
                <td>
                    @Html.DisplayFor(model => model.appID, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.DisplayFor(model => model.accNum, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.DisplayFor(model => model.appDate, new { htmlAttributes = new { } })
                </td>
            </tr>

            <tr style="background-color:wheat;">
                <td>@Html.LabelFor(model => model.parentR.givenid, htmlAttributes: new { @class = "" })</td>
                <td>@Html.LabelFor(model => model.parentR.firstname, htmlAttributes: new { @class = "" })</td>
                <td>@Html.LabelFor(model => model.parentR.lastname, htmlAttributes: new { @class = "" })</td>

            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.parentR.givenid, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.DisplayFor(model => model.parentR.firstname, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.DisplayFor(model => model.parentR.lastname, new { htmlAttributes = new { @class = "form-control" } })
                </td>


            </tr>

        </table>

    </center>
    <br />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <center>
        <table style="margin-top:3px; border:double; background-color:white;width:51% ">

            <tr>
                <td>@RIS.Resources.Res.UpdateDeleteReason</td>
                <td colspan="2">
                    @Html.TextArea("reason", new
                   {
                       @style = "width: 100%; height: 43px;",
                       @Required = "Required",
                       @placeholder = "سبب الحذف",
                       maxlength = "50",
                       oninvalid = "this.setCustomValidity('" + RIS.Resources.Res.alertRequired + "')",
                       oninput = "setCustomValidity('')"
                   })
                </td>
            </tr>
        </table>
        </center>
        <table align="center">

            <tr>
                <td>
                    <div class="form-actions no-color">
                        <input type="submit" value=@RIS.Resources.Res.Delete.ToString() class="btn btn-default" />
                    </div>
                </td>

                <td>|</td>
                <td>
                    <div class="form-actions no-color">

                        @Html.ActionLink(RIS.Resources.Res.backToRadList.ToString(), "Index")
                    </div>
                </td>
            </tr>


        </table>
    }
</div>
<p>



</p>

<br /><br />
<script type="text/javascript" src="~/assets/js/jquery1.8.min.js"></script>

<script>

    $(document).ready(function () {
        $('#infoToShow').toggle();
        $('#otherInfo').click(function () {
            $('#infoToShow').toggle();
        });
    })
</script>