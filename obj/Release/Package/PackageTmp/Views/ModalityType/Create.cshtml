@model RIS.Models.ModalityType

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@RIS.Resources.Res.addNewType</title>

<div style="margin-top:1%">
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <center>
        <h2>@RIS.Resources.Res.addNewType</h2>
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.num)
        <div class="form-horizontal" style="margin-top:3px;background-color:white;width:600px; height:50px;border-radius:4px;">
            
            <div class="form-group" style="margin-top:10px;">
                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>
        
        
        </div>
</center>


 

    <table align="center">
        <tr>
            <td><input type="submit" value=@RIS.Resources.Res.add class="btn btn-default" /></td>
            <td>@Html.ActionLink(RIS.Resources.Res.backtoModType, "Index")</td>

        </tr>

    </table>


}   
</div>
