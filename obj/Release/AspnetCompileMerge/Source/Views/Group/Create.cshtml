@model RIS.Models.Group

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@RIS.Resources.Res.addNewGroup</title>

<div style="margin-top:1%">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <center>

        <h2>@RIS.Resources.Res.addNewGroup</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.num)

        <div style="margin-top:3px;background-color:white;width:600px;border-radius:4px; padding: 1%;">
            <div class="from=group">
                <div class="form-group">
                    @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="from-group">
                    <table width="90%">
                        <tr style="background-color:wheat;">
                            <td>@RIS.Resources.Res.groupPerms</td>
                        </tr> 
                    </table>
                    <div class="scroll">
                        <table width="100%">
                            @foreach (var item in ViewBag.pList)
                            {
                                var gId = item.num;
                                <tr style="background-color: #e9e1d4;">
                                    <td>@RIS.Resources.Res.ResourceManager.GetString(item.name)</td>
                                    <td>
                                        <input type="checkbox" name="gPerms" value="@gId">
                                    </td>

                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </center>




    <table align="center">
        <tr>
            <td><input type="submit" value=@RIS.Resources.Res.add class="btn btn-default" /></td>
            <td>@Html.ActionLink(RIS.Resources.Res.backtoGroups, "Index")</td>

        </tr>

    </table>


}
</div>
