@model RIS.Models.Group

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@RIS.Resources.Res.surDelGroup.ToString()</title>
<div style="margin-top:1%">
    <h2>@RIS.Resources.Res.delGroup </h2>

    @*<h3>Are you sure you want to delete this?</h3>*@

    <center>
        <h3>@RIS.Resources.Res.surDelGroup.ToString()</h3>
        <div style="margin-top:3px;background-color:white;width:600px;border-radius:4px;">

            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>

            </dl>

        </div>

    </center>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <table align="center">
            <tr>
                <td><input type="submit" value=@RIS.Resources.Res.Delete class="btn btn-default" /></td>
                <td>@Html.ActionLink(RIS.Resources.Res.backtoGroups, "Index")</td>

            </tr>

        </table>
    }
</div>
